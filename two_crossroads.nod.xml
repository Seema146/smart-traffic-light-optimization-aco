<nodes>
    <!-- First crossroad at (0,0) -->
    <node id="n1" x="0" y="0" type="traffic_light" customShape="0,-10;10,0;0,10;-10,0;0,-10" color="255,215,0"/>
    <!-- Second crossroad 500 meters east at (500,0) -->
    <node id="n2" x="500" y="0" type="traffic_light" customShape="0,-10;10,0;0,10;-10,0;0,-10" color="255,215,0"/>
    <!-- Third crossroad 250 meters south of n1 at (0,-250) -->
    <node id="n3" x="0" y="-250" type="traffic_light" customShape="0,-10;10,0;0,10;-10,0;0,-10" color="255,215,0"/>
    <!-- Fourth crossroad 500 meters east of n3 at (500,-250) -->
    <node id="n4" x="500" y="-250" type="traffic_light" customShape="0,-10;10,0;0,10;-10,0;0,-10" color="255,215,0"/>

    <!-- Incoming/Outgoing nodes for n1 -->
    <node id="n1_in_north" x="0" y="50"/> <!-- Reduced from 100 to 50 -->
    <node id="n1_out_south" x="0" y="-50"/> <!-- Reduced from -100 to -50 -->
    <node id="n1_in_west" x="-100" y="0"/>
    <node id="n1_out_east" x="100" y="0"/>

    <!-- Incoming/Outgoing nodes for n2 -->
    <node id="n2_in_west" x="400" y="0"/>
    <node id="n2_out_east" x="600" y="0"/>
    <node id="n2_in_north" x="500" y="50"/> <!-- Reduced from 100 to 50 -->
    <node id="n2_out_south" x="500" y="-50"/> <!-- Reduced from -100 to -50 -->

    <!-- Incoming/Outgoing nodes for n3 -->
    <node id="n3_in_north" x="0" y="-200"/> <!-- Adjusted from -400 to -200 -->
    <node id="n3_out_south" x="0" y="-300"/> <!-- Adjusted from -600 to -300 -->
    <node id="n3_in_west" x="-100" y="-250"/>
    <node id="n3_out_east" x="100" y="-250"/>

    <!-- Incoming/Outgoing nodes for n4 -->
    <node id="n4_in_west" x="400" y="-250"/>
    <node id="n4_out_east" x="600" y="-250"/>
    <node id="n4_in_north" x="500" y="-200"/> <!-- Adjusted from -400 to -200 -->
    <node id="n4_out_south" x="500" y="-300"/> <!-- Adjusted from -600 to -300 -->
</nodes>